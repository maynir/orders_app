<h1>Menu</h1>

<table class="table">
  <thead>
    <tr>
      <th>Meal</th>
      <th>Cost</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @menu_items.each do |menu_item| %>
      <tr>
        <td><%= menu_item.meal %></td>
        <td><%= menu_item.cost %>â‚ª</td>
        <td><%= link_to 'Add', {controller: :order_items, action: :new, menu_item_id: menu_item.id},class: 'btn btn-success' %></td>
        <!--<td><%= link_to 'Add', {controller: :order_items, action: :create, menu_item_id: menu_item.id},class: 'btn btn-success' %></td>-->
        <td><%= link_to 'Show', menu_item, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_menu_item_path(menu_item), class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', menu_item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

